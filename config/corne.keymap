#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <locale/keys_us_international.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        colemak {
            display-name = "Colemak-DH";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp TAB   &kp Q  &kp W  &kp F  &kp P       &kp B                  &kp J        &kp L  &kp U      &kp Y    &kp SEMI  &kp BSLH
&kp ESC   &kp A  &kp R  &kp S  &kp T       &kp G                  &kp M        &kp N  &kp E      &kp I    &kp O     &kp SQT
&kp LGUI  &kp Z  &kp X  &kp C  &kp D       &kp V                  &kp K        &kp H  &kp COMMA  &kp DOT  &kp FSLH  &kp RET
                        &none  &kp LSHIFT  &mt LCTRL BACKSPACE    &lt 2 SPACE  &mo 1  &none
            >;
        };

        symbols {
            display-name = "Symbols";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &kp EN_A_UMLAUT  &kp AT           &kp HASH        &kp DOLLAR       &kp PERCENT    &kp CARET         &kp AMPERSAND         &kp ASTERISK           &trans             &kp TILDE     &kp PIPE
&trans  &kp UNDERSCORE   &kp MINUS        &kp LEFT_BRACE  &kp RIGHT_BRACE  &kp PLUS       &kp LEFT_BRACKET  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACKET  &kp COLON     &kp DOUBLE_QUOTES
&trans  &kp EN_O_UMLAUT  &kp EN_U_UMLAUT  &trans          &kp EXCLAMATION  &trans         &trans            &kp GRAVE             &kp LESS_THAN          &kp GREATER_THAN   &kp QUESTION  &trans
                                          &trans          &trans           &trans         &trans            &trans                &trans
            >;
        };

        movement {
            display-name = "Movement";
            bindings = <
&trans  &trans           &kp N7  &kp N8  &kp N9  &trans    &kp HOME  &kp PAGE_UP    &trans  &kp END    &trans       &trans
&trans  &kp LC(LS(TAB))  &kp N4  &kp N5  &kp N6  &kp N0    &kp LEFT  &kp DOWN       &kp UP  &kp RIGHT  &kp LC(TAB)  &trans
&trans  &trans           &kp N1  &kp N2  &kp N3  &trans    &trans    &kp PAGE_DOWN  &trans  &trans     &trans       &trans
                                 &trans  &trans  &trans    &trans    &trans         &trans
            >;
        };
    };
};
